<!-- recieves order -->

<table class="table table-bordered">
  <tr>
    <th>注文日</th>
    <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
  </tr>
  <tr>
    <th>配送先</th>
    <td>
      <%= order.postal_code %><br>
      <%= order.address %><br>
      <%= order.name %>
    </td>
  </tr>
  <tr>
    <th>支払方法</th>
    <td><%= order.payment_method %></td>
  </tr>
  <tr>
    <th>ステータス</th>
    <td><%= order.order_status %></td>
  </tr>
</table>
