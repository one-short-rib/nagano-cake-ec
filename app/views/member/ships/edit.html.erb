<% provide(:title, "配送先編集") %>
<div class="row">
  <div class="col-xs-12" >
		<div class="page-title">
			<span>配送先編集</span>
		</div>
		<%= form_for @ship, url: "/members/ships/#{@ship.id}" do |f| %>
			<div class="ship-form">
			<table>
				<tr>
					<td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
					<td><%= f.text_field :postal_code, class: "postal_code" %></td>
				</tr>
				<tr>
					<td><%= f.label :address,"住所" %></td>
					<td colspan="2"><%= f.text_field :address, class: "address" %></td>
				</tr>
				<tr>
					<td><%= f.label :name,"宛名" %></td>
					<td><%= f.text_field :name, class: "name" %></td>
					<td></td>
					<td>
						<%= f.submit "編集する", class: "btn btn-primary", id: "ship-submit" %>
					</td>
				</tr>
			</table>
		</div>
		<% end %>
	</div>
</div>
