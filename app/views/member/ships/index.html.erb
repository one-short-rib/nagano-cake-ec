<% provide(:title, "配送先一覧") %>
<div class="row">
  <div class="col-xs-12" >
		<div class="page-title">
			<span>配送先登録 / 一覧</span>
		</div>
		<%= form_with model:@ship, url: '/members/ships' do |f| %>
			<div id="error_render">
			</div>
			<div class="ship-form">
				<table>
					<tr>
						<td><%= f.label :postal_code,"郵便番号(ハイフンなし)" %></td>
						<td><%= f.text_field :postal_code, class: "postal_code" %></td>
					</tr>
					<tr>
						<td><%= f.label :address,"住所" %></td>
						<td colspan="2"><%= f.text_field :address, class: "address" %></td>
					</tr>
					<tr>
						<td><%= f.label :name,"宛名" %></td>
						<td><%= f.text_field :name, class: "name" %></td>
						<td></td>
						<td>
							<%= f.submit "登録する", class: "btn btn-success", id: "ship-submit" %>
						</td>
					</tr>
				</table>
			</div>
		<% end %>
		<!-- ships一覧 -->
		<div class="row">
			<div class="ships-index col-xs-12" id="ships-index">
				<%= render 'member/ships/ship', ships: @ships %>
			</div>
		</div>
	</div>
</div>