<table class=" table-bordered">
	<thead>
		<tr>
			<th>郵便番号</th>
			<th>住所</th>
			<th>宛名</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% if ships.present? %>
			<% ships.each do |ship| %>
				<tr>
					<td><%= ship.postal_code.to_s.insert(3, "-") %></td>
					<td><%= ship.address %></td>
					<td><%= ship.name %></td>
					<td>
						<%= link_to '編集する', edit_members_ship_path(ship), class: "btn btn-primary" %>
						<%= link_to '削除する', members_ship_path(ship), method: :delete, remote: true,
						data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
					</td>
				</tr>
			<% end %>
		<% else %>
		 <tr>
		 	<td colspan="5">登録された配送先はありません</td>
		 </tr>
	 <% end %>
	</tbody>
</table>