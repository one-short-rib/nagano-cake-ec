<% provide(:title, "カート") %>
<% if @cart_items.present? %>
<!-- ナビバーで -->
<div class="row">
	<div class="col-xs-12" >
		<div class="page-title clearfix">
			<span>ショッピングカート</span>
			<%= link_to 'カートを空にする', clear_members_cart_items_path, method: :delete, class: "btn btn-danger pull-right" %>
		</div>
		<div class="cart-index">
			<table>
				<thead>
					<tr>
						<th colspan="2">商品名</th>
						<th>単価(税込)</th>
						<th>数量</th>
						<th>小計</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @cart_items.each do |cart_item| %>
						<%= render 'member/cart_items/cart_item', cart_item: cart_item %>
					<% end %>
				</tbody>
			</table>
		</div>
		<div class="actions cart-bottom clearfix">
			<%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %>
			<table class="pull-right table-bordered">
				<tbody>
					<tr>
						<th>合計金額</th>
						<td><%= total_price(@cart_items).to_s(:delimited) %></td>
					</tr>
				</tbody>
			</table>
		</div>
		<div class="actions wide-btn">
			<%= link_to "情報入力に進む", new_members_order_path, class: "btn btn-success btn-lg center-block" %>
		</div>
	</div>
</div>

<% else %>
<div class="row">
	<div class="col-xs-12" >
		<div class="page-title">
			<span>ショッピングカート</span>
		</div>
		<div class="cart-index">
			<h2>カートの中は空です</h2>
		</div>
		<div class="actions">
			<%= link_to '買い物を続ける', items_path, class: "btn btn-primary"  %>
		</div>
	</div>
</div>
<% end %>
