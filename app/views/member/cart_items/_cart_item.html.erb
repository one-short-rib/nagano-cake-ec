<tr>
	<td>
		<%= image_tag 'sample1.jpg', size: "40x40" %></br>
		画像
	</td>
	<td><%= cart_item.item.name %></td>
	<td><%= tax_include(cart_item.item.price) %></td>
	<td>
		<%= form_for cart_item, url: "/members/cart_items/#{cart_item.id}" do |f| %>
		<%= f.number_field :amount, in: 0..50,size: "30x25", class: "" %>
		<%= f.submit '変更', class: "btn btn-primary btn-sm" %>
		<% end %>
	</td>
	<td><%= subtotal_price(cart_item) %></td>
	<td>
		<%= link_to '削除する', members_cart_item_path(cart_item), method: :delete,
		data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn btn-danger" %>
	</td>
</tr>