<% if notice%>
	<div class="flash notice">
	  <span id="notice"><%= notice %></span>
	</div>
<% elsif flash[:success] %>
	<div class="flash success">
  	<span id="success"><%= flash[:success] %></span>
	</div>
<% elsif flash[:danger] %>
	<div class="flash danger">
	  <span id="danger"><%= flash[:danger] %></span>
	</div>
<% end %>