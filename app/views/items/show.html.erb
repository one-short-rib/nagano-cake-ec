<% provide(:title, "商品詳細") %>
<div class="row">
  <div class="col-sm-3 col-md-2">
    <%= render 'items/genres_box', genres: @genres %>
  </div>
  <div class="item-show col-sm-9 col-md-10">
    <div class="row">
      <div class="item-image col-sm-6 col-md-7">
        <%= attachment_image_tag @item, :item_image, format: 'jpg', fallback: "sample1.jpg" %>
      </div>
      <div class="item-details col-sm-6s col-md-5">
        <h3><%= @item.name %></h3>
        <p id="item-explanation">
          <%= @item.explanation %>
          </p>
        <h3>¥<%= @item.price.to_s(:delimited) %><span> (税込)</span></h3>
        <div class="actions cart-button">
          <%= form_for(CartItem.new, url: members_cart_items_path) do |f| %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.number_field :amount, min: 1, max: 50, placeholder:"個数選択" %>
                <%= f.submit "カートに入れる", class:"btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
