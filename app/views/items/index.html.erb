<% provide(:title, "商品一覧") %>
<div class="row">
  <div class="col-xs-3">
    <%= render 'items/genres_box', genres: @genres %>
  </div>
  <div class="item-index col-xs-9">
    <h1>商品一覧 <span>(全<%= @counts %>件)</span></h1>
    <%= render 'items/item_index', items: @items %>
  </div>
  <div class="col-xs-offset-6">
      <%= paginate @items %>
  </div>
</div>
