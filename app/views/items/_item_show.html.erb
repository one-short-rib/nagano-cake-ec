<!-- recieves item -->

<div class="item_image col-xs-7">
  <%= attachment_image_tag item, :item_image, format: 'jpg', fallback: "no_image.jpg", size: "400x300" %>
</div>
<div class="item_details col-xs-5">
  <h2><%= item.name %></h2>
  <p><%= item.explanation %></p>
  <h3>¥<%= item.price.to_s(:delimited) %><span class="in-tax">(税込)</span></h3>
</div>
