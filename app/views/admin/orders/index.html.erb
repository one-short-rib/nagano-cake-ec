<div class = "row">
	<div class = "col-md-8 col-md-offset-2">
		<h3>注文履歴一覧</h3>

		<table class = "table table-hover">
			<tr>
				<th>購入日時</th>
				<th>購入者</th>
				<th>注文個数</th>
				<th>注文ステータス</th>
			</tr>

			<% @orders.each do |order| %>
				<tr>
					<td><%= order.created_at(order.id) %></td>
					<td><%= order.name %></td>
					<td><%= order.billing_amount %></td>
					<td><%= order.order_status %></td>
				</tr>
			<% end %>
		</table>
	</div>
</div>