<h2>ジャンル一覧・追加</h2>
<br>
<br>
<!--ジャンル新規作成-->
<%= form_for(@genre, url: admin_genres_path) do |f| %>
	<%= f.label :name, "ジャンル" %>
	<%= f.text_field :name %>

	<div><!-- 有効・無効のポッチ -->
		<% label :is_valid, "有効", value: true %>
		<%= f.radio_button :is_valid, true %>有効
	</div>
	<div>
		<% label :is_valid, "無効", value: false %>
		<%= f.radio_button :is_valid, false %>無効
	</div>

	<!--追加ボタン-->
	<%= f.submit '追加', class: "" %>
<% end %>
<table>
	<thead>
		<tr>
			<th>ジャンル</th>
			<th>状態</th>
		</tr>
	</thead>
	<tbody>
		<% if present? %>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.name %></td>
				<td><!--状態-->
					<% if genre.is_valid == true %>
						有効
					<% end %>
					<% if genre.is_valid == false %>
						無効
					<% end %>
				</td>
				<td><!--編集するボタン-->
					<%= link_to "編集する",edit_admin_genre_path(genre.id), class: "" %>
				</td>
			</tr>
			<% end %>
		<% end %>
	</tbody>
</table>