<% provide(:title, "ジャンル一覧") %>
<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h4>
				<span class="title">ジャンル一覧・追加</span>
			</h4>
			<%= render 'layouts/error_messages', model:@genre %>
			<br>
			<br>
			<!--ジャンル新規作成-->
			<%= form_for(@genre, url: admin_genres_path) do |f| %>
				<div class="genre-field">
				<%= f.label :name, "ジャンル" %>
				<%= f.text_field :name %>
				</div>
				<div class="radio-button1"><!-- 有効・無効のポッチ -->
					<% label :is_valid, "有効", value: true %>
					<%= f.radio_button :is_valid, true %>有効
				</div>
				<div class="radio-button2">
					<% label :is_valid, "無効", value: false %>
					<%= f.radio_button :is_valid, false %>無効
				</div>
				<!--追加ボタン-->
				<%= f.submit '追加', class: "btn btn-primary btn-sm" %>
			<% end %>
		</div>
		<div class="col-xs-6">
			<table class="table list">
				<thead>
					<tr class="genre-info">
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% if present? %>
						<% @genres.each do |genre| %>
						<tr class="genre-info2">
							<td><%= genre.name %></td>
							<td><!--状態-->
								<% if genre.is_valid == true %>
									有効
								<% end %>
								<% if genre.is_valid == false %>
									無効
								<% end %>
							</td>
							<td><!--編集するボタン-->
								<%= link_to "編集する",edit_admin_genre_path(genre.id), class: "btn btn-primary btn-sm" %>
							</td>
						</tr>
						<% end %>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
