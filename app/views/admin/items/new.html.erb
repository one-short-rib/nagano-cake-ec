<% provide(:title, "商品登録") %>
<div class = "container">
	<!--エラーメッセージ入れる-->
	<div class = "row">
		<h2>商品新規登録</h2>
	</div>

	<div class = "row">
		<%= form_for(@item, url:'/admin/items') do |f| %>
			<div class = "col-md-4">
				<div class = "field">
					<%= f.attachment_field :item_image %>
				</div>
			</div>

			<div class = "col-md-8">
				<dl>
					<div class = "ad-new-field">
						<dt>商品名</dt>
						<dd><%= f.text_field :name %></dd>
					</div>
					<div class = "ad-new-field">
						<dt>商品説明</dt>
						<dd><%= f.text_area :explanation %></dd>
					</div>
					<div class = "ad-new-field">
						<!--ネットのcollection_selectの書き方写経してみた。表示は問題なし-->
						<dt>ジャンル</dt>
						<dd><%= f.collection_select :genre_id, Genre.all, :id, :name %></dd>
					</div>
					<div class = "ad-new-field">
						<dt>税抜価格</dt>
						<dd><%= f.text_field :price %>円</dd>
					</div>
					<div class = "ad-new-field">
						<dt>販売ステータス</dt>
						<dd><%= f.select :is_saled, [["売り切れ", false],["販売中", true]], include_blank: "選択" %></dd>
					</div>
				</dl>
				<%= f.submit "新規登録", class:"btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>
