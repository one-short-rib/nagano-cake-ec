<div class = "container">
	<!--エラーメッセージ入れる-->
	<div class = "row">
		<h2>商品新規登録</h2>
	</div>

	<div class = "row">
		<%= form_for(@item) do |f| %>
			<div class = "col-md-4">
				<div class = "field">
					<%= f.attachment_field :item_image %>
				</div>
			</div>

			<div class = "col-md-8">
				<div class = "field">
					<h4>商品名<%= f.text_field :name %></h4>
				</div>
				<div class = "field">
					<h4>商品説明<%= f.text_area :explanation %></h4>
				</div>
				<div class = "field">
					<h4>ジャンル<%= f.select :genre, [["ケーキ","ケーキ"],["プリン","プリン"],["焼き菓子","焼き菓子"],["キャンディ","キャンディ"]], include_blank: "選択" %></h4>
				</div>
				<div class = "field">
					<h4>税抜価格<%= f.text_field :price %>円</h4>
				</div>
				<div class = "field">
					<h4>販売ステータス<%= f.select :is_saled, [["売り切れ","売り切れ"],["販売中","販売中"]], include_blank: "選択" %></h4>
				</div>
				<%= f.submit "新規登録", class:"btn btn-primary" %>
			</div>
		<% end %>
	</div>
</div>