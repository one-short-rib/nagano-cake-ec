<div class = "container">
	<!--エラーメッセージ入れる-->
	<div class = "row">
		<div class = "col-md-4">
			<div class = "field">
				<%= attachment_image_tag @item, :item_image, :fill, 100, 60, format:'jpeg', class:"item-img", fallback:"no_image.jpg" %>
				<!--no_imageのjpeg入れたassetに-->
			</div>
		</div>

		<div class = "col-md-8">
			<label class = "item-name">商品名<%= @item.name %></label>
			<label class = "item-explanation">商品説明<%= @item.explanation %></label>
			<label class = "item-genre">ジャンル</label>
			<label class = "item-price">税価格(税抜価格)<%= @item.price %></label>
			<label class = "item-saled">販売ステータス<%= @item.is_saled %><!--税込価格が表示されるようにする--></label>
			<%= f.submit　"編集する, edit_admin_item_path(@item.id)　%>
		</div>
	</div>
</div>