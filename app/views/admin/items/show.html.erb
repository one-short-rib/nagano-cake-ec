<%= provide(:title, "商品詳細") %>
<div class = "row">
	<div class = "show-heading">
		<h3>商品詳細</h3>
	</div>
</div>

<div class = "row">
	<div class = "col-md-3">
		<div class = "item-show-img">
			<%= attachment_image_tag @item, :item_image, format:'jpeg', class:"item-img", fallback:"no_image.jpg" %>
			<!--no_imageのjpeg入れたassetに-->
		</div>
	</div>

	<div class = "col-md-6">
		<div class = "item-show-menu">
			<table>
				<div class = "item-show-field">
					<tr>
						<th>商品名</th>
						<td><%= @item.name %></td>
					</tr>
				</div>
				<div class = "item-show-field">
					<tr>
						<th>商品説明</th>
						<td><%= @item.explanation %></td>
					</tr>
				</div>
				<div class = "item-show-field">
					<tr>
						<th>ジャンル</th>
						<td><%= @item.genre.name %></td>
					</tr>
				</div>
				<div class = "item-show-field">
					<th>税込価格(税抜価格)</th>
					<td><%= tax_include(@item.price).to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
				</div>
				<div class = "item-show-field">
					<tr>
						<th>販売ステータス</th>
						<td>
							<% if @item.is_saled == false %>
								<p>販売停止中</p>
							<% else %>
							    <p>販売中</p>
							<% end %>
						</td>
					</tr>
				</div>
			</table>
		</div>
	</div>
	<div class = "col-md-3">
		<div class = "btn-down">
			<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-primary", style:"width:150px;font-size:17px;line-height:40px;font-weight:bold;" %>
		</div>
	</div>
</div>