<!--エラーメッセージ入れる-->
<div class = "row">
	<%= form_for(@item, url: admin_item_path(@item)) do |f| %>
		<div class = "col-md-4">
			<div class = "field">
				<%= f.attachment_field :item_image %>
			</div>
		</div>

		<div class = "col-md-8">
			<dl>
				<div class = "field">
					<dt>商品名</dt>
					<dd><%= f.text_field :name %></dd>
				</div>
				<div class = "field">
					<dt>商品説明</dt>
					<dd><%= f.text_area :explanation %></dd>
				</div>
				<div class = "field">
					<dt>ジャンル</dt>
					<dd><%= f.collection_select :genre_id, Genre.all, :id, :name %></dd>
				</div>
				<div class = "field">
					<dt>税抜価格</dt>
					<dd><%= f.text_field :price %></dd>
				</div>
				<div class = "field">
					<dt>販売ステータス</dt>
					<dd><%= f.select :is_saled, [["販売停止中","false"],["販売中","true"]] %></dd>
				</div>
			</dl>
			<div class = "action">
				<%= f.submit "保存を変更", class:"btn btn-primary", method: :patch %>
			</div>
		</div>
	<% end %>
</div>