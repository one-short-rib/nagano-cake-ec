<div class = "container">
	<div class="row">
		<div class="col-md-offset-2 col-md-8">
			<h3>商品一覧</h3>
			<%= link_to '+', new_admin_item_path, class:"btn-circle-3d-dent pull-right" %>

			<table class="table table-hover">
				<thead>
					<th>商品ID</th>
					<th>商品名</th>
					<th>税抜価格</th>
					<th>ジャンル</th>
					<th>ステータス</th>
				</thead>

				<% if present? %>
				<% @items.each do |item| %>
					<tbody>
						<td><%= item.id %></td>
						<td><%= link_to item.name, admin_item_path(item.id) %></td>
						<td><%= item.price %></td>
						<td><%= item.genre.name %></td>
						<td>
							<% if item.is_saled == false %>
								<p>販売停止中</p>
							<% else %>
							    <p>販売中</p>
							<% end %>
						</td>
					</tbody>
				<% end %>
				<%= paginate @items %>
				<% end %>
			</table>
		</div>
	</div>
</div>
