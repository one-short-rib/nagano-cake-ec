<% provide(:title, "会員詳細") %>
<div class="container">
	<div class="row">
		<div class="col-xs-8">
			<h4>
				<span class="title"><%= full_name(@member) %>さんの会員詳細</span>
			</h4>
		</div>
		<div class="col-xs-5">
			<table class="table list">
				<tr>
					<th>会員ID</th>
					<td><%= @member.id %>
						<% if @member.is_deleted == true %>
							<span class="exit">退会済み</span>
						<% end %>
						<% if @member.is_deleted == false %>
							<span class="effectiveness">有効会員</span>
						<% end %>
					</td>
				</tr>
				<tr>
					<th>氏名</th>
					<td><%= full_name(@member) %></td>
				</tr>
				<tr>
					<th>フリガナ</th>
					<td><%= full_name_kana(@member) %></td>
				</tr>
				<tr>
					<th>郵便番号</th>
					<td><%= @member.postal_code %></td>
				</tr>
				<tr>
					<th>住所</th>
					<td><%= @member.address %></td>
				</tr>
				<tr>
					<th>電話番号</th>
					<td><%= @member.phone_number %></td>
				</tr>
				<tr>
					<th>メールアドレス</th>
					<td><%= @member.email %></td>
				</tr>
			</table>
		</div>
		<br>
		<div class="col-xs-8">
			<%= link_to "編集する", edit_admin_member_path(@member.id), class: "btn btn-primary btn-sm" %>
			<%= link_to "注文履歴一覧を見る", admin_orders_path, class: "btn btn-primary btn-sm" %>
			<!--注文履歴一覧を見るボタン-->
		</div>
	</div>
</div>