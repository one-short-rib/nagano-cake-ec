<%= form_for(@member) do |f| %>
<h2>
	<%= @member.last_name %><%= @member.first_name %>さんの会員詳細
</h2>
<div class="bootstrap大きさ">
	<label for="member_id">会員ID</label>
	<div class="" ><%= @member.id %></div>
</div>
<div class="bootstrap大きさ">
	<label for="name">氏名</label>
	<div class="" >
		<%= f.text_field :last_name, autofocus:true %>
		<%= f.text_field :first_name %>
	</div>
</div>
<div class="bootstrap大きさ">
	<label for="name">フリガナ</label>
	<div class="" >
		<%= f.text_field :last_name_kana %>
		<%= f.text_field :first_name_kana %>
	</div>
</div>
<div class="bootstrap大きさ">
	<label for="name">郵便番号</label>
	<div class="" >
		<%= f.text_field :postal_code %>
	</div>
</div>
<div class="bootstrap大きさ">
	<label for="name">住所</label>
	<div class="" >
		<%= f.text_field :address %>
	</div>
</div>
<div class="bootstrap大きさ">
	<label for="name">電話番号</label>
	<div class="" >
		<%= f.text_field :phone_number %>
	</div>
</div>
<div class="bootstrap大きさ">
	<label for="name">メールアドレス</label>
	<div class="" >
		<%= f.text_field :email %>
	</div>
</div>
<div class="bootstrapレイアウト">
	<!--編集するボタン--> <!--注文履歴一覧を見るボタン-->
</div>