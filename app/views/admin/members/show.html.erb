<h2>
	<%= @member.last_name %><%= @member.first_name %>さんの会員詳細
</h2>
<table>
	<thead>
		<tr>
			<th>顧客ID</th>
			<th>氏名</th>
			<th>フリガナ</th>
			<th>郵便番号</th>
			<th>住所</th>
			<th>電話番号</th>
			<th>メールアドレス</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<td>
				<%= @member.id %>
			</td>
			<td>
				<%= @member.last_name %>　<%= @member.first_name %>
			</td>
			<td>
				<%= @member.last_name_kana %>　<%= @member.first_name_kana %>
			</td>
			<td>
				<%= @member.postal_code %>
			</td>
			<td>
				<%= @member.address %>
			</td>
			<td>
				<%= @member.phone_number %>
			</td>
			<td>
				<%= @member.email %>
			</td>
		</tr>
	</tbody>
	<!--編集するボタン--> <!--注文履歴一覧を見るボタン-->
</table>