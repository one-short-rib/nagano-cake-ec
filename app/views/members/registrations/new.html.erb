<div class="row">
  <div class="col-xs-10 col-xs-offset-1" >
    <h3>新規会員登録</h3>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "members/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <td>名前</td>
          <td><%= f.label :last_name, "(姓)" %></td>
          <td><%= f.text_field :last_name, autofocus: true, class: "last_name" %></td>
          <td><%= f.label :first_name, "(名)" %></td>
          <td><%= f.text_field :first_name, autofocus: true, class: "first_name" %></td>
        </tr>
        <tr>
          <td>フリガナ</td>
          <td><%= f.label :last_name_kana, "(セイ)" %></td>
          <td><%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %></td>
          <td><%= f.label :first_name_kana, "(メイ)" %></td>
          <td><%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %></td>
        </tr>
        <tr>
          <td><%= f.label :email, "メールアドレス" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :email, autofocus: true, autocomplete: "email", class: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :postal_code, autofocus: true, class: "postal_code" %></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :address, autofocus: true, class: "address" %></td>
        </tr>
        <tr>
          <td><%= f.label :phone_number, "電話番号(ハイフンなし)" %></td>
          <td></td>
          <td colspan="3"><%= f.text_field :phone_number, autofocus: true, class: "phone_number" %></td>
        </tr>
        <tr>
          <td>
            <%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>
          </td>
          <td></td>
          <td colspan="3">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
          <td></td>
          <td colspan="3">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </td>
        </tr>
      </table>
    <div class="actions ">
      <%= f.submit "新規登録", class: "btn btn-success center-block" %>
    </div>
    <% end %>
    <div>
      <h5>既に登録済みの方</h5>
      <p>
        <%= link_to "こちら", new_session_path(resource_name) %>
        からログインしてください。
      </p>
    </div>
  </div>
  <div class="col-xs-1"></div>
</div>